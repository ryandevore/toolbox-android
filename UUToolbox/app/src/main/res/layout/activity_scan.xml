<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/headerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onScanClicked"
            android:text="@string/scan"/>

        <Button
            android:id="@+id/toggleBluetoothButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onToggleBluetoothClicked"
            android:text="@string/turn_bluetooth_off"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerButtons">

    </ListView>


</RelativeLayout>
