<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/name_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/rssi_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_label"
            android:text="Bluetooth Device Name"
            tools:ignore="HardcodedText"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mac_label"
            android:text="Bluetooth MAC"
            tools:ignore="HardcodedText"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connection_state_label"
            android:text="Connection State"
            tools:ignore="HardcodedText"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="normal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rssi_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rssi_label"
            android:text="-999"
            tools:ignore="HardcodedText"
            android:textSize="18sp"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_label"
            android:text="1.57"
            tools:ignore="HardcodedText"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beacon_rate_label"
            android:text="10/sec"
            tools:ignore="HardcodedText"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="normal"/>

    </LinearLayout>



</RelativeLayout>