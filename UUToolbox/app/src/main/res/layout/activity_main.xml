<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="LE Scanner"
                tools:ignore="HardcodedText"
                android:onClick="onLeScannerClicked"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Classic Scanner"
                tools:ignore="HardcodedText"
                android:onClick="onClassicScannerClicked"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Photo Gallery"
                tools:ignore="HardcodedText"
                android:onClick="onPhotoGalleryClicked"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Weather"
                tools:ignore="HardcodedText"
                android:onClick="onWeatherClicked"/>
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
